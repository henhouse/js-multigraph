{ "legend": { "rows": 1, "border": 1, "base": [0, 1], "anchor": [0, 1], "position": [0, 25],
              "icon": { "width": 25, "height": 20, "border": 0}},
  "window": { "margin": 2, "border": 2, "padding": 5 },
  "plotarea": { "marginbottom": 80, "marginleft": 60, "marginright": 170, "margintop": 25},
  "horizontalaxis": { "id": "time", "type": "datetime", "position": [0, 0],
                      "min": "2015-03-01-08-00", "max": "2015-03-04-08-00",
                      "title": false, "grid": true,
                      "labels": { "angle": 0, "anchor": [0, 1],
                                  "label" : [
                                      { "format": "%d %n %Y",  "spacing": ["2M","1M","7D","5D","2D"] },
                                      { "format": "%H:00 %d %n %Y",  "spacing": ["24H","12H","6H","3H","2H","1H"] },
                                      { "format": "%H:%i %d %n %Y",  "spacing": ["30m","15m", "10m", "5m", "1m"] }]},
                      "binding": { "id": "timebinding", "min": "2009011116", "max": "2009011216"} },
  "verticalaxes": [
      { "id": "temp", "type": "number", "min": 0,  "max": 20.5, "position": [0, 0], "base":  [-1, -1],
        "title": { "angle": 90, "position": [-45, 0], "anchor": [0, -1], "text": "Temperature (C)" },
        "labels": { "format": "%.1f", "start": 0, "angle": 0, "position": [-10, 0], "anchor": [1, 0],
                    "spacing": [50,20,10,5,2,1,0.1,0.01] },
        "binding": { "id": "tempbinding", "min": 0, "max": 1}},
      { "id": "precip", "type": "number", "min": 0, "max": 10.1, "position": [0, 0], "base": [1, -1],
        "title": { "angle": 90, "position": [25, 0], "anchor": [0, 1], "text": "Precip (mm)" },
        "zoom": { "anchor": 0}, "pan": false, "binding": { "id": "precipbinding", "min": 0, "max": 1},
        "labels": { "format": "%.1f", "start": 0, "angle": 0, "position": [5, 0], "anchor": [-1, 0],
                    "spacing": [50,20,10,5,2,1,0.1,0.01] } },
      { "id": "solarad", "type": "number", "min": 0, "max": 1100, "position": [60, 0], "base": [1, -1],
        "title": { "angle": 90, "position": [35, 0], "anchor": [0, 1], "text": "Solar Radiation (W/m^2)" },
        "zoom": { "anchor": 0}, "pan": false, "binding": { "id": "solaradbinding", "min": 0, "max": 1},
        "labels": { "format": "%1d", "start": 0, "angle": 0, "position": [5, 0], "anchor": [-1, 0],
                    "spacing": [1000,500,200,50,20,10,5,2,1,0.1,0.01] } },
      { "id": "windspd", "type": "number", "min": 0, "max": 15, "position": [120, 0], "base": [1, -1],
        "title": { "angle": 90, "position": [35, 0], "anchor": [0, 1], "text": "Wind (m/s)" },
        "zoom": { "anchor": 0}, "pan": false, "binding": { "id": "windspdbinding", "min": 0, "max": 1},
        "labels": { "format": "%.1f", "start": 0, "angle": 0, "position": [5, 0], "anchor": [-1, 0],
                    "spacing": [1000,500,200,50,20,10,5,2,1,0.1,0.01] }}
  ],
  "filter" : {"distance": 5},
  "plots": [
      { "legend": { "label": "Solar Radiation"},
        "horizontalaxis": {"time" : "time_1h"},   "verticalaxis": { "solarad" : "solarad" },
        "style": "fill", "options": { "linecolor": "#990000",
                                      "fillcolor": "#ffaaaa"}},
      { "legend": { "label": "Precip"},
        "horizontalaxis": { "time": "time_5m"}, "verticalaxis": { "precip": "precip" },
        "style": "bar", "options": { "fillcolor": "green",
                                     "barwidth":  "5m",
                                     "baroffset": 0,
                                     "linecolor": "black" }},
      { "legend": { "label": "Temperature"},
        "horizontalaxis": { "time": "time_5m" },
        "verticalaxis": { "temp" : "temp" },
        "style": "pointline", "options" : { "linecolor": "blue",
                                            "linewidth": "1",
                                            "pointcolor": "blue",
                                            "pointsize": "1",
                                            "pointoutlinecolor": "blue" }},
      { "legend": { "label": "Wind Speed"},
        "horizontalaxis": { "time": "time_1h" }, "verticalaxis": { "windspd": "windspd" },
        "style": "pointline", "options": { "linecolor": "black",
                                           "linewidth": "1",
                                           "pointcolor": "black",
                                           "pointsize": "1",
                                           "pointoutlinecolor": "black" }}
  ],


  "throttle": {
      "pattern": "^http://crndata.multigraph.org",
      "requests": 1, "period": 1000, "concurrent": 1},

  "data": [
      { "variables": [{ "id": "time_1h",  "type": "datetime"},
                      { "id": "solarad",  "type": "number"},
                      { "id": "sur_temp", "type": "number"},
                      { "id": "windspd",  "type": "number"} ],
        "service": { "location": "http://crndata.multigraph.org/data/1026/SOLARAD,SUR_TEMP,WINDSPD/" }},
      { "variables": [{ "id": "time_5m", "type": "datetime"},
                      { "id": "temp"},
                      { "id": "precip"} ],
        "service": { "location": "http://crndata.multigraph.org/data/1026/T5,P5/" }}
  ]
}
